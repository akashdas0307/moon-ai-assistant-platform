{
  "appId": "com.moonai.assistant",
  "productName": "Moon AI Assistant",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "target": ["dmg"],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": ["nsis"],
    "icon": "build/icon.ico"
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Utility"
  }
}
